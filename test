import React from "react";
import { render } from "@testing-library/react";
import { BootstrapTooltip } from "./BootstrapTooltip";

describe("BootstrapTooltip", () => {
  it("renders tooltip with arrow color black and background color black", () => {
    const { getByTestId } = render(
      <BootstrapTooltip title="Test Tooltip" data-testid="tooltip" />
    );
    const tooltip = getByTestId("tooltip");
    expect(tooltip).toBeInTheDocument();
    expect(tooltip).toHaveStyle("color: #000000");
    expect(tooltip).toHaveStyle("background-color: #000000");
  });
});
