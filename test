<%@ page language="java" %>
<%@ page buffer="8kb" %>
<%@ page import="com.gecs.apollo.wkst.util.ApolloCustomerServiceUtility" %>
<%@ include file="ApolloCommon.jsp"%>
<%@ taglib uri="/WEB-INF/lib/apollo.tld" prefix="apollo" %>

<%!
    String image = null;
    String css = null;
    String js = null;
    String jsp = null;
    String actionPath = null;

    public void jspInit() {
        ApolloCustomerServiceUtility apolloCSUtility = ApolloCustomerServiceUtility.getInstance();
        image = apolloCSUtility.getCSImagePath();
        css = apolloCSUtility.getCSStandardCSS();
        js = apolloCSUtility.getCSJSPath();
        jsp = apolloCSUtility.getCSJSPPath();
        actionPath = apolloCSUtility.getCSActionPath();
    }

    public void jspDestroy() {
        image = null;
        css = null;
        js = null;
        jsp = null;
        actionPath = null;
    }
%>

<html>
<head>
    <link rel="stylesheet" href="<%= css %>">
    <title>Payment Details</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <!-- Chrome Changes Start issue #160 -->
    <style>
        textarea::placeholder {
            text-align: center;
            line-height: 30px;
        }
    </style>

    <SCRIPT language="JavaScript">
        function clickCancel() {
            window.returnValue = true;
            parent.closeDialog();
        }

        function clickOk(frm) {
            var data = {
                "yesFlag" : document.getElementById('yesFlag').value,
                "noFlag" : document.getElementById('noFlag').value,
                "noteSectionId" : document.getElementById('noteSectionId').value
            }

            window.returnValue = data;
            parent.closeDialog();
        }

        function enableSubmit() {
            document.getElementById('okButton').removeAttribute('disabled');
        }
    </SCRIPT>
    <script language="javascript" type="text/javascript" src="<%= js %>jquery-1.7.1.min.js"></script>
    <!-- Chrome Changes End issue #160 -->
</head>

<apollo:body bgcolor="#FFFFFF" topmargin="0" leftmargin="0" cellspacing="0" cellpadding="0" class="blueBackground">
    <apollo:form name="formDtechDetails" method="post">

    <br/>
    <div align="center">
        <div class="row_d" style="margin-bottom:10px; margin-left:8px;">
            <div class="row_d_fixed" style="font-family:arial; font-size:13px;" align="left">Has all the trouble shooting completed and incident ticket opened?</div>
        </div>
        <div class="row_d" style="margin-bottom:20px;margin-left:18px;">
            <div class="row_d_fixed bodyText" style="margin-left:48px;"><input type="radio" id="yesFlag" name="clickFlag" value="yes" onclick="enableSubmit()"/>Yes</input></div>
            <div class="row_d_fixed bodyText" style="margin-left:48px;"><input type="radio" id="noFlag" name="clickFlag" value="no" onclick="enableSubmit()"/>No</input></div>
        </div>
        <br/>

        <div class="row_d" style="margin-bottom:10px; margin-left:8px;">
            <div class="row_d_fixed" style="font-family:arial; font-size:13px;" align="left"><textarea name="note" id="noteSectionId" placeholder="Note Section" rows="2" cols="59"></textarea></div>
        </div>

        <div style="height:50px;width:100%;" align="center">
            <apollo:input type="button" name="dtechDetailsSubmit" value="Submit" disabled="true" id="okButton" style="margin-right:65px;" class="blueButton" onClick="clickOk(this.form)"/>
            <apollo:input type="button" name="Cancel" value="Cancel" class="blueButton" onClick="clickCancel()"/>
        </div>
    </div>

    </apollo:form>
</apollo:body>

</html>
