<html>
<head>
  <script type="text/javascript">
    function enableSubmit() {
      var yesRadio = document.getElementById("yesRadio");
      var noRadio = document.getElementById("noRadio");
      var submitButton = document.getElementById("submitButton");
      
      if (yesRadio.checked || noRadio.checked) {
        submitButton.disabled = false;
      } else {
        submitButton.disabled = true;
      }
    }
    
    function submitForm() {
      var selectedOption;
      var yesRadio = document.getElementById("yesRadio");
      
      if (yesRadio.checked) {
        selectedOption = "Yes";
      } else {
        selectedOption = "No";
      }
      
      // Call your function with the selected radio button value here
      // Example: YourFunction(selectedOption);
      alert("Selected option: " + selectedOption);
    }
  </script>
</head>
<body>
  <form>
    <label>
      <input type="radio" id="yesRadio" name="option" onclick="enableSubmit()" /> Yes
    </label>
    <br />
    <label>
      <input type="radio" id="noRadio" name="option" onclick="enableSubmit()" /> No
    </label>
    <br />
    <input type="submit" id="submitButton" value="Submit" disabled="disabled" onclick="submitForm()" />
  </form>
</body>
</html>
